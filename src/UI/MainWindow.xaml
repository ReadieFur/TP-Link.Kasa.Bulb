        <SolidColorBrush x:Key="SliderThumb.Disabled.Border1" Color="#FFD9D9D9"/>
        <SolidColorBrush x:Key="SliderThumb.Track.Background1" Color="{Binding hueHandleColour}"/>
        <SolidColorBrush x:Key="SliderThumb.Track.Border1" Color="{Binding hueHandleColour}"/>
