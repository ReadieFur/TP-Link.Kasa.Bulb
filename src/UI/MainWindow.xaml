        <Border x:Name="menuBar" Grid.Row="0" Background="{Binding backgroundSolid}" CornerRadius="5,5,0,0" BorderBrush="{Binding accentSolid}" BorderThickness="1,1,1,0" MouseDown="MenuBar_MouseDown">
            <Grid>
                <Label Content="TP-Link Kasa Bulb Control" Foreground="{Binding foregroundSolid}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="5,5,5,5" Margin="2.5,-1,0,0"/>
                <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button x:Name="minimisebtn" Style="{DynamicResource ButtonStyle1}" FontFamily="Segoe MDL2 Assets" Content="&#xE921;" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40" BorderBrush="{x:Null}" Margin="0" Background="{Binding backgroundSolid}" FontSize="14" Foreground="{Binding foregroundSolid}" Click="minimisebtn_Click"/>
                    <Button x:Name="closebtn" FontFamily="Segoe MDL2 Assets" Content="&#xE8BB;" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40" BorderBrush="{x:Null}" Background="{Binding backgroundSolid}" FontSize="16" Foreground="{Binding foregroundSolid}" Style="{DynamicResource ButtonRed}"/>
                </WrapPanel>
                <Path Data="M275,38 L470.09938,38" Height="1" Stretch="Fill" VerticalAlignment="Bottom" Stroke="{StaticResource foregroundFadeRight}"/>
            </Grid>
        </Border>
        <Border BorderBrush="{Binding accentSolid}" Grid.Row="1" BorderThickness="1,0,1,1" Visibility="Visible" Grid.RowSpan="2" CornerRadius="0,0,5,5" Background="{Binding backgroundSolid}" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>
                <GroupBox Style="{DynamicResource GroupBoxStyle1}" x:Name="loginGroup" Header="TP Link Login" FontWeight="Bold" FontSize="14" Margin="5,5,5,0" BorderBrush="{Binding foregroundSolid}" Foreground="{Binding foregroundSolid}">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Normal" Padding="0,0,0,0" Foreground="{Binding foregroundSolid}"/>
                        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,0,0" FontWeight="Normal" Grid.Column="1" Margin="5,0,0,0" Foreground="{Binding foregroundSolid}"/>
                        <TextBox x:Name="email" TextWrapping="NoWrap" VerticalAlignment="Top" FontWeight="Normal" HorizontalContentAlignment="Left" Height="22" Margin="0,20,0,0" Grid.RowSpan="1" Background="{x:Null}" BorderBrush="{Binding foregroundSolid}" BorderThickness="0,0,0,1" Foreground="{Binding foregroundSolid}" SelectionBrush="{Binding accentSolid}" CaretBrush="{Binding foregroundSolid}"/>
                        <PasswordBox x:Name="password" Margin="5,0,0,0" VerticalAlignment="Bottom" Grid.Column="1" FontWeight="Normal" Height="22" BorderThickness="0,0,0,1" Background="{x:Null}" BorderBrush="{Binding foregroundSolid}" Foreground="{Binding foregroundSolid}" SelectionBrush="{Binding accentSolid}" CaretBrush="{Binding foregroundSolid}"/>
                        <Button Content="Log In" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="2" FontWeight="Normal" Height="22" Padding="2,-1,2,2" Click="logIn_Click" Margin="5,0,0,0" Background="{x:Null}" Foreground="{Binding foregroundSolid}" BorderBrush="{Binding foregroundSolid}" Style="{DynamicResource ButtonStyle1}"/>
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="devicesGroup" Header="Devices" FontWeight="Bold" FontSize="14" Margin="5,0,5,0" BorderBrush="{Binding foregroundSolid}" Grid.Row="1" Style="{DynamicResource GroupBoxStyle1}" Foreground="{Binding foregroundSolid}">
                    <ListBox x:Name="devicesList" FontWeight="Normal" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{Binding foregroundSolid}" d:ItemsSource="{d:SampleData ItemCount=5}" Style="{DynamicResource ListBoxStyle1}"/>
                </GroupBox>
                <GroupBox x:Name="deviceOptions" Header="Device Options" FontWeight="Bold" FontSize="14" Margin="5,0,5,5" BorderBrush="{Binding bulbColour}" Grid.Row="2" Style="{DynamicResource GroupBoxStyle1}" Foreground="{Binding foregroundSolid}">
                    <Grid x:Name="deviceOptionsGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Label Content="Mode" Foreground="{Binding foregroundSolid}" FontWeight="Normal" BorderThickness="0,0,50,0"/>
                            <RadioButton x:Name="modeOff" Style="{DynamicResource RadioButtonStyle1}" Content="Off" Foreground="{Binding foregroundSolid}" FontWeight="Normal" Margin="5,0,0,4" Padding="4,-3,0,0" IsChecked="True" Checked="modeOff_Checked"/>
                            <RadioButton x:Name="modeWhite" Content="White" Foreground="{Binding foregroundSolid}" FontWeight="Normal" Style="{DynamicResource RadioButtonStyle1}" Margin="5,0,0,4" Padding="4,-3,0,0" Checked="modeWhite_Checked"/>
                            <RadioButton x:Name="modeRGB" Content="RGB" Foreground="{Binding foregroundSolid}" FontWeight="Normal" Style="{DynamicResource RadioButtonStyle1}" Margin="5,0,0,4" Padding="4,-3,0,0" Checked="modeRGB_Checked"/>
                            <RadioButton x:Name="modeScript" Content="Script" Foreground="{Binding foregroundSolid}" FontWeight="Normal" Style="{DynamicResource RadioButtonStyle1}" Margin="5,0,0,0" Padding="4,-3,0,0" Checked="modeScript_Checked"/>
                        </StackPanel>
                        <Grid Grid.Column="1" x:Name="colourSliders">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Label x:Name="warmthLabel" Content="W" FontWeight="Normal" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Foreground="{Binding foregroundSolid}"/>
                            <Slider Style="{DynamicResource WarmthSliderStyle}" x:Name="warmthSlider" Thumb.DragCompleted="warmthSlider_DragCompleted" ValueChanged="warmthSlider_ValueChanged" IsSnapToTickEnabled="True" Orientation="Vertical" TickPlacement="None" Maximum="9000" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Minimum="2500" SmallChange="50" TickFrequency="100" Value="2500" IsDirectionReversed="True"/>
                            <Label x:Name="hueLabel" Content="H" FontWeight="Normal" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{Binding foregroundSolid}"/>
                            <Slider Style="{DynamicResource HueSliderStyle}" Thumb.DragCompleted="colourSlider_DragCompleted" ValueChanged="colourSlider_ValueChanged" Value="360" IsSnapToTickEnabled="True" x:Name="hueSlider" Orientation="Vertical" Maximum="360" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Margin="5,0,0,0" SmallChange="1"/>
                            <Label x:Name="saturationLabel" Content="S" FontWeight="Normal" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{Binding foregroundSolid}"/>
                            <Slider Style="{DynamicResource SaturationSliderStyle}" Value="100" IsSnapToTickEnabled="True" x:Name="saturationSlider" Thumb.DragCompleted="colourSlider_DragCompleted" ValueChanged="colourSlider_ValueChanged" Orientation="Vertical" TickPlacement="None" Maximum="100" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" Margin="5,0,0,0" SmallChange="1"/>
                            <Label x:Name="brightnessLabel" Content="B" FontWeight="Normal" HorizontalAlignment="Center" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{Binding foregroundSolid}"/>
                            <Slider Style="{DynamicResource BrightnessSliderStyle}" Value="100" IsSnapToTickEnabled="True" x:Name="brightnessSlider" Thumb.DragCompleted="brightnessSlider_DragCompleted" ValueChanged="brightnessSlider_ValueChanged" Orientation="Vertical" TickPlacement="None" Maximum="100" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" Margin="5,0,0,0" SmallChange="1"/>
                        </Grid>
                        <Grid x:Name="scriptsContainer" Grid.Column="2" Margin="15,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Scripts" Foreground="{Binding foregroundSolid}" FontWeight="Normal" BorderThickness="0,0,50,0" Padding="0,5,5,5" Grid.Row="0"/>
                            <ListBox Style="{DynamicResource ListBoxStyle1}" x:Name="scriptsList" FontWeight="Normal" BorderBrush="{Binding foregroundSolid}" Background="{x:Null}" Foreground="{Binding foregroundSolid}" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="1" MouseDown="scriptsList_MouseDown"/>
                            <Grid Grid.Row="2" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label Content="Script Name" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,0,0" FontWeight="Normal" Margin="0,5,0,0" Foreground="{Binding foregroundSolid}" Height="18" Width="76" Grid.Column="0" Grid.Row="0"/>
                                <TextBox x:Name="scriptName" TextWrapping="NoWrap" VerticalAlignment="Top" FontWeight="Normal" HorizontalContentAlignment="Left" Height="22" Margin="0,25,0,0" Grid.RowSpan="1" Background="{x:Null}" BorderBrush="{Binding foregroundSolid}" BorderThickness="0,0,0,1" Foreground="{Binding foregroundSolid}" SelectionBrush="{Binding accentSolid}" CaretBrush="{Binding foregroundSolid}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"/>
                                <Button x:Name="runOrStopScriptButton" Content="Run Script" HorizontalAlignment="Right" VerticalAlignment="Top" FontWeight="Normal" Height="22" Padding="2,-1,2,2" Margin="0,5,0,0" Background="{x:Null}" Foreground="{Binding foregroundSolid}" BorderBrush="{Binding foregroundSolid}" Style="{DynamicResource ButtonStyle1}" Grid.Column="0" Grid.Row="1" Click="runOrStopScript_click"/>
                                <Button x:Name="addOrUpdateScriptButton" Content="Add" HorizontalAlignment="Right" VerticalAlignment="Top" FontWeight="Normal" Height="22" Padding="2,-1,2,2" Margin="5,5,0,0" Background="{x:Null}" Foreground="{Binding foregroundSolid}" BorderBrush="{Binding foregroundSolid}" Style="{DynamicResource ButtonStyle1}" Grid.Column="1" Grid.Row="1" Click="addOrUpdateScript_Click"/>
                                <Button x:Name="deleteScriptButton" Content="Delete" HorizontalAlignment="Right" VerticalAlignment="Top" FontWeight="Normal" Height="22" Padding="2,-1,2,2" Margin="5,5,0,0" Background="{x:Null}" Foreground="{Binding foregroundSolid}" BorderBrush="{Binding foregroundSolid}" Style="{DynamicResource ButtonRed}" Grid.Column="2"  Grid.Row="1" Click="deleteScript_Click"/>
                            </Grid>
                            <ListBox x:Name="scriptFrames" FontWeight="Normal" BorderBrush="{Binding foregroundSolid}" Background="{x:Null}" Foreground="{Binding foregroundSolid}" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="3" Margin="0,5,0,0" Style="{DynamicResource ListBoxStyle1}" MouseDown="scriptFrames_MouseDown"/>
                            <Grid x:Name="scriptFrameOptions" Grid.Row="5" Margin="0,5,0,0" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Delay (ms)" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,0,0" FontWeight="Normal" Margin="0,5,0,0" Foreground="{Binding foregroundSolid}" Height="18" Width="76"/>
                                <TextBox x:Name="delayInput" TextWrapping="NoWrap" VerticalAlignment="Top" FontWeight="Normal" HorizontalContentAlignment="Left" Height="22" Margin="0,25,5,0" Grid.RowSpan="1" Background="{x:Null}" BorderBrush="{Binding foregroundSolid}" BorderThickness="0,0,0,1" Foreground="{Binding foregroundSolid}" SelectionBrush="{Binding accentSolid}" CaretBrush="{Binding foregroundSolid}" Grid.Column="0" Text="100"/>
                                <Button x:Name="addFrameButton" Content="Add Frame" HorizontalAlignment="Right" VerticalAlignment="Top" FontWeight="Normal" Height="22" Padding="2,-1,2,2" Margin="0,25,0,0" Background="{x:Null}" Foreground="{Binding foregroundSolid}" BorderBrush="{Binding foregroundSolid}" Style="{DynamicResource ButtonStyle1}" Grid.Column="1" Click="addOrUpdateFrame_Click"/>
                                <Button x:Name="deleteFrameButton" Content="Delete" HorizontalAlignment="Right" VerticalAlignment="Top" FontWeight="Normal" Height="22" Padding="2,-1,2,2" Margin="5,25,0,0" Background="{x:Null}" Foreground="{Binding foregroundSolid}" BorderBrush="{Binding foregroundSolid}" Style="{DynamicResource ButtonRed}" Grid.Column="2" Click="deleteFrame_click"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
        </Border>
    </Grid>
</Window>
